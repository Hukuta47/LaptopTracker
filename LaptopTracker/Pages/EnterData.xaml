<Page x:Class="LaptopTracker.Pages.EnterData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaptopTracker.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="EnterData">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>


		<Border  Grid.Column="0" Grid.Row="1" Background="#67747F" CornerRadius="52" Margin="16,16,8,16">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				
				<TextBlock Grid.Column="0" FontSize="36" Text="КТО ВЫДАЛ" FontFamily="pack://application:,,,/Resources/#Clear Sans Infanity Bold" Foreground="White" Margin="16,16,0,16"/>
				<ComboBox Grid.Column="1" FontSize="36" FontFamily="pack://application:,,,/Resources/#Clear Sans Infanity Bold" Name="Combobox_SelectEmployee" DisplayMemberPath="FirstAndSecondName" SelectedValuePath="Id"/>
			</Grid>
		</Border>
		<Border Grid.Column="1" Background="#67747F" CornerRadius="32" Margin="8,16,16,16" >
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="auto"/>
					<RowDefinition/>
				</Grid.RowDefinitions>

				<TextBlock Grid.Row="0" FontSize="36" Text="КОММЕНТАРИЙ" FontFamily="pack://application:,,,/Resources/#Clear Sans Infanity Bold" Foreground="White" Margin="16,16,0,0" />
				<TextBox Grid.Row="1" Name="Textbox_EnterComment" Padding="16" AcceptsReturn="True" TextWrapping="Wrap" FontSize="36" FontFamily="pack://application:,,,/Resources/#Clear Sans Infanity Bold" VerticalScrollBarVisibility="Hidden" CharacterCasing="Upper"/>

			</Grid>
		</Border>


		<Button Grid.Column="0" Grid.Row="2" FontSize="36" HorizontalAlignment="Left" Content="НАЗАД" Width="307" Margin="16,0,0,16" Click="Return_Click" />
		<Button Grid.Column="1" Grid.Row="2" FontSize="36" HorizontalAlignment="Right" Content="ДАЛЕЕ" Width="307" Margin="0,0,16,16" Click="NextPage_Click"/>
	</Grid>
</Page>
