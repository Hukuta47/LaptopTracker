<Page x:Class="LaptopTracker.Pages.СharacteristicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaptopTracker.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="СharacteristicPage">

    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Grid Background="White" Margin="16,16,0,0" VerticalAlignment="Top" Width="305.523333333333" Height="308" Name="Grid_ImageIcon">
			<Grid.Clip>
				<RectangleGeometry Rect="0,0, 305.523333333333, 305.523333333333" RadiusX="52" RadiusY="52"/>
			</Grid.Clip>

			<Image Source="/Resources/NoImage.png" Stretch="None" Name="Image_NoImage"/>
			<Image Name="Image_PictureDevice" RenderOptions.BitmapScalingMode="HighQuality" Margin="16"/>
		</Grid>

		
		<Border  Grid.Column="1" Grid.RowSpan="2" Background="#67747F" CornerRadius="52" Margin="16" Padding="16">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="16"/>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="16"/>
					<RowDefinition/>
				</Grid.RowDefinitions>

				<TextBlock Grid.Row="0"  FontSize="36" Text="ХАРАКТЕРИСТИКИ" FontFamily="pack://application:,,,/Resources/#Clear Sans Infanity Bold" Foreground="White" TextAlignment="Left" Margin="10,0,0,0"/>
				<Rectangle Grid.Row="2" Height="8" Fill="#FF505A63" RadiusX="4" RadiusY="4"/>
				<ScrollViewer Grid.Row="4" PanningMode="VerticalOnly" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" IsManipulationEnabled="True">
					<TextBlock FontSize="36" Name="TextBlock_Description" TextWrapping="Wrap" FontFamily="pack://application:,,,/Resources/#Clear Sans Infanity Bold" Foreground="White" LineHeight="48"/>
				</ScrollViewer>
			</Grid>
		</Border>

		<StackPanel Grid.Row="1" VerticalAlignment="Bottom" Margin="16,16,0,16" >
			<Button Name="Button_Select" Content="ВЫБРАТЬ" FontSize="36" Click="Select_Click"/>
			<Rectangle Height="16"/>
			<Button Content="НАЗАД" FontSize="36" Click="GoBack_Click"/>
		</StackPanel>
		
	</Grid>
</Page>
