<Page x:Class="LaptopTracker.Pages.GivePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaptopTracker.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="GivePage">

	<Grid>
		<!--<Grid Background="#000000" Opacity="0.5" Panel.ZIndex="1" Name="Panel_SubstrateBackground"/>-->
		<ScrollViewer x:Name="MainScroll" PanningMode="VerticalOnly" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" IsManipulationEnabled="True">
			<StackPanel>
				<Grid Height="106"/>
				<WrapPanel Name="ItemsPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="16"/>
				<Grid Height="145"/>
			</StackPanel>
		</ScrollViewer>

		<Button HorizontalAlignment="Center" VerticalAlignment="Bottom" Content="ПРОДОЛЖИТЬ" FontSize="36" Margin="0,0,0,16" Click="NextPage_Click"/>
		<Button HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="36" Margin="16,16,0,16" Style="{StaticResource IconButton}" Click="Return_Click">
			<Image Source="/Resources/Chevron left.png" Width="48" />
		</Button>

	</Grid>
</Page>
