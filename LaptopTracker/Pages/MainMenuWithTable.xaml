<Page x:Class="LaptopTracker.Pages.MainMenuWithTable"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaptopTracker.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="MainMenuWithTable">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>


		<Border  Grid.Column="0" Background="#67747F" CornerRadius="32" Margin="16" Padding="16">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="8"/>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="16"/>
					<RowDefinition Height="auto"/>
					<RowDefinition/>
				</Grid.RowDefinitions>

				<TextBlock Grid.Row="0"  FontSize="36" Text="СПИСОК ВЫДАННЫХ УСТРОЙСТВ" FontFamily="pack://application:,,,/Resources/#Clear Sans Infanity Bold" Foreground="White" TextAlignment="Center"/>
				<Rectangle Grid.Row="2" Height="8" Fill="#FF505A63" RadiusX="4" RadiusY="4"/>
				<Grid Grid.Row="4" Margin="10">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="170"/>
						<ColumnDefinition Width="64"/>
						<ColumnDefinition Width="242"/>
						<ColumnDefinition Width="64"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="64"/>
						<ColumnDefinition Width="80"/>
					</Grid.ColumnDefinitions>

					<TextBlock FontSize="36" FontFamily="pack://application:,,,/Resources/#Clear Sans Infanity Bold" Foreground="White" TextAlignment="Center" Grid.Column="0" Text="ДАТА"/>
					<TextBlock FontSize="36" FontFamily="pack://application:,,,/Resources/#Clear Sans Infanity Bold" Foreground="White" TextAlignment="Center" Grid.Column="2" Text="КОЛИЧЕСТВО"/>
					<TextBlock FontSize="36" FontFamily="pack://application:,,,/Resources/#Clear Sans Infanity Bold" Foreground="White" TextAlignment="Left" Grid.Column="4" Text="КОММЕНТАРИЙ"/>
				</Grid>
				
				<ScrollViewer Grid.Row="5" PanningMode="VerticalOnly" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" IsManipulationEnabled="True">
					<StackPanel Name="StackPanel_ListRequests"/>
				</ScrollViewer>

			</Grid>
		</Border>
		<Button Grid.Column="1" Grid.Row="1" FontSize="68"  Content="ВЫДАТЬ" Margin="16,0,16,16" Click="Give_Click"/>
	</Grid>
</Page>
