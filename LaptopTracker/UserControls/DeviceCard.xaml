<UserControl x:Class="LaptopTracker.UserControls.DeviceCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaptopTracker.UserControls"
             mc:Ignorable="d" >

	<Grid Margin="16">
		<Grid Panel.ZIndex="1"  Opacity="1">
			<Border BorderBrush="#ff4900" BorderThickness="8" CornerRadius="32" Width="288" Height="382"/>
			<Image Source="/Resources/MarkSelection.png" Width="68" HorizontalAlignment="Left" VerticalAlignment="Top" />
		</Grid>
		

		<StackPanel  Width="288" Height="382" Background="#67747f">
			<StackPanel.Clip>
				<RectangleGeometry Rect="0,0,288, 382" RadiusX="36" RadiusY="36"/>
			</StackPanel.Clip>
			
			<Image Width="256" Height="256" Margin="8,16,8,8" Source="/Resources/Sprite-0001.jpg">
				<Image.Clip>
					<RectangleGeometry RadiusX="20" RadiusY="20" Rect="0,0,256,256"/>
				</Image.Clip>
			</Image>
			<TextBlock TextTrimming="CharacterEllipsis" Text="XXXXX" TextAlignment="Center" FontFamily="pack://application:,,,/Resources/#Clear Sans Infanity Bold" Foreground="White" FontSize="32" Margin="16,0,16,0" UseLayoutRounding="False" Width="256" TextWrapping="Wrap" Height="43.27"/>
			<TextBlock TextTrimming="CharacterEllipsis" Text="YYYYY" TextAlignment="Center" FontFamily="pack://application:,,,/Resources/#Clear Sans Infanity Bold" Foreground="White" FontSize="32" Margin="16,0,16,0" UseLayoutRounding="False" Width="256" TextWrapping="WrapWithOverflow"/>
		</StackPanel>
	</Grid>
	
</UserControl>
